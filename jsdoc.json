{
    "tags": {
        "allowUnknownTags": ["mermaid", "category"]
    },
    "source": {
        "include": ["./admin-bro/src",
                    "./admin-bro-hapijs",
                    "./admin-bro-mongoose",
                    "./admin-bro-sequelizejs",
                    "./admin-bro-expressjs"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown",
        "jsdoc-mermaid",
        "better-docs/category",
        "node_modules/jsdoc-typeof-plugin"
    ],
    "opts": {
        "encoding": "utf8",
        "destination": "docs/",
        "readme": "./docs-src/home.md",
        "recurse": true,
        "verbose": true,
        "tutorials": "./docs-src/tutorials",
        "template": "better-docs"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "staticFiles": {
              "include": [
                  "./docs-src/statics"
              ]
            }
        },
        "better-docs": {
            "name": "AdminBro Documentation",
            "logo": "images/logo.png",
            "navigation": [
                {
                    "label": "Github",
                    "href": "https://github.com/SoftwareBrothers/admin-bro"
                },
                {
                    "label": "Example Application",
                    "href": "https://admin-bro-example-app.herokuapp.com/admin"
                }
            ]
        }
    }
}
